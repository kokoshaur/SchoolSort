<Window x:Class="SchoolSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolSort"
        mc:Ignorable="d" Height="70" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Background="#FFC54141">
        <Button x:Name="CalculateBut" Content="Посчитать" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="85" Click="Calculate_Click" Height="25" IsEnabled="False"/>
        <Button x:Name="FilePathBut" Content="Выбрать файл" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="180" Click="FilePath_Click" Height="25"/>
        <Button x:Name="ExitBut" Content="Выйти" HorizontalAlignment="Left" Margin="105,40,0,0" VerticalAlignment="Top" Width="85" Height="25" Click="Exit_Click"/>

    </Grid>
</Window>
